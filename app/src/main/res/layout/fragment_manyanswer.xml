<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ManyAnswerFragment">

    <TextView
        android:id="@+id/textViewQuestionManyChoice"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:text="Many Answer"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>
    <TextView
        android:id="@+id/textViewAnswerManyAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF9800"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"/>
    <LinearLayout
        android:id="@+id/linearManyChoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/checkboxManyA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ManyA"
            android:textSize="24dp"/>
        <CheckBox
            android:id="@+id/checkboxManyB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ManyBb"
            android:textSize="24dp"
            android:layout_marginTop="20dp"/>
        <CheckBox
            android:id="@+id/checkboxManyC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ManyC"
            android:textSize="24dp"
            android:layout_marginTop="20dp"/>
        <CheckBox
            android:id="@+id/checkboxManyD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ManyD"
            android:textSize="24dp"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
    <Button
        android:id="@+id/submitBtnManyChoice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:textSize="24dp"
        android:text="Submit"
        android:textColor="#FFFFFF"
        android:background="#FF9800"/>

</LinearLayout>