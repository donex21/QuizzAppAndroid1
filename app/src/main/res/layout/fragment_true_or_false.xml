<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrueOrFalseFragment"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewQuestionTrualse"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:text="True Or False"
        android:textSize="24dp"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>
    <TextView
        android:id="@+id/textViewAnswerTrualse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF9800"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"/>
    <RadioGroup
        android:id="@+id/radioGrpTrualse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <RadioButton
            android:id="@+id/radioBtnTrue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="True"
            android:textSize="30dp"/>
        <RadioButton
            android:id="@+id/radioBtnFalse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="False"
            android:textSize="30dp"
            android:layout_marginTop="30dp"/>
    </RadioGroup>
    <Button
        android:id="@+id/submitBtnTraulse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:textSize="24dp"
        android:text="Submit"
        android:textColor="#FFFFFF"
        android:background="#FF9800"/>

</LinearLayout>